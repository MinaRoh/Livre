<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF6ED"
    tools:context=".ui.feed.FeedDetailActivity">

    <ImageButton
        android:id="@+id/detail_back_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_backward"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/detail_back_btn"
        android:fontFamily="@font/nanum_barun_gothic_ultra_light"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-0.7sp"
        android:text="@string/back"
        android:textColor="#97b843"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/image_detail"
        android:layout_below="@+id/detail_back_btn"
        android:layout_width="134dp"
        android:layout_height="189dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/image_detail"
        android:layout_marginStart="12dp"
        android:text="책제목"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtauthor"
        android:textColor="@color/black"
        android:text="책저자"
        android:textSize="13sp"
        android:layout_toRightOf="@id/image_detail"
        android:layout_below="@id/txttitle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtdescription"
        android:text="책설명"
        android:textSize="13sp"
        android:layout_toRightOf="@id/image_detail"
        android:textColor="@color/black"
        android:layout_below="@id/txtauthor"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"/>
</RelativeLayout>
