<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_backward"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/nanum_barun_gothic_ultra_light"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-0.7sp"
            android:text="@string/password_reset_text"
            android:textColor="#97b843"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_email"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_email"
            android:layout_marginStart="50dp" />
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#97b843"
            android:textColor="#97b843"
            android:textCursorDrawable="@null"
            android:inputType="textWebEmailAddress"
            android:textColorHint="#97b843"
            android:hint="@string/email"
            android:layout_marginStart="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_send"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_login_circle"
            android:layout_marginStart="50dp" />
    </LinearLayout>

</LinearLayout>